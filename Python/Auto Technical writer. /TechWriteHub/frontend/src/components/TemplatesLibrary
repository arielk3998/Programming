import React, { useEffect, useState } from 'react';

const TemplatesLibrary = () => {
    const [templates, setTemplates] = useState([]);

    useEffect(() => {
        // Fetch templates from the backend API
        const fetchTemplates = async () => {
            try {
                const response = await fetch('/api/templates');
                const data = await response.json();
                setTemplates(data);
            } catch (error) {
                console.error('Error fetching templates:', error);
            }
        };

        fetchTemplates();
    }, []);

    return (
        <div className="p-4">
            <h1 className="text-2xl font-bold mb-4">Templates Library</h1>
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {templates.map((template) => (
                    <div key={template.id} className="border rounded-lg p-4 shadow">
                        <h2 className="font-semibold text-lg">{template.title}</h2>
                        <p className="text-gray-600">{template.description}</p>
                        <a
                            href={template.downloadLink}
                            className="mt-2 inline-block bg-blue-500 text-white py-2 px-4 rounded"
                            download
                        >
                            Download
                        </a>
                    </div>
                ))}
            </div>
        </div>
    );
};

export default TemplatesLibrary;