const express = require('express');
const router = express.Router();
const tutorialController = require('../controllers/tutorialController');
const auth = require('../middleware/auth');
const { body, param } = require('express-validator');

// Get all tutorials (public)
router.get('/', tutorialController.getAllTutorials);

// Get tutorial by ID (public)
router.get(
  '/:id',
  [param('id').isInt().withMessage('ID must be an integer')],
  tutorialController.getTutorialById
);

// Create a new tutorial (protected, with validation)
router.post(
  '/',
  auth,
  [
    body('title').isString().notEmpty().withMessage('Title is required'),
    body('content').isString().notEmpty().withMessage('Content is required')
  ],
  tutorialController.createTutorial
);

// Update a tutorial (protected, with validation)
router.put(
  '/:id',
  auth,
  [
    param('id').isInt().withMessage('ID must be an integer'),
    body('title').optional().isString().notEmpty(),
    body('content').optional().isString().notEmpty(),
    body('completed').optional().isBoolean()
  ],
  tutorialController.updateTutorial
);

// Delete a tutorial (protected, with validation)
router.delete(
  '/:id',
  auth,
  [param('id').isInt().withMessage('ID must be an integer')],
  tutorialController.deleteTutorial
);

module.exports = router;